@{
    ViewData["Title"] = "Privacy Policy";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@TempData["message"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<div class="row">
    <div class="col-lg-12 col-xl-12 ">
        <div class="login-sec">
            <div class=" text-center card mb-0">
                <form asp-area="" asp-controller="Home" asp-action="UserDelete" id="login" class="card-body" tabindex="500" method="post">
                    <label class="header-brand">DELETE USER</label>
                    <div class="">
                        <div class="form-group">
                            <input type="text" class="form-control" id="id" name="id" placeholder="Enter Id">
                        </div>
                    </div>
                    <div class="submit mt-3 mb-3">
                        <button type="submit" class="btn btn-danger btn-block">Delete User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
