@{
    ViewData["Title"] = "Privacy Policy";
}
@model GetByIdUserResponseVM
@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@TempData["message"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<div class="row">
    <div class="col-lg-12 col-xl-12 ">
        <div class="login-sec">
            <div class=" text-center card mb-0">
                <form asp-area="" asp-controller="Home" asp-action="UserGetById" id="login" class="card-body" tabindex="500" method="post">
                    <label class="header-brand">GET USER</label>
                    <div class="">
                        <div class="form-group">
                            <input type="text" class="form-control" id="id" name="id" placeholder="Enter Id">
                        </div>
                    </div>
                    <div class="submit mt-3 mb-3">
                        <button type="submit" class="btn btn-primary btn-block">Get User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Data.Id</td>
                <td>@Model.Data.FirstName</td>
                <td>@Model.Data.LastName</td>
                <td>@Model.Data.Email</td>
            </tr>
        </tbody>
    </table>
}
