@{
    ViewData["Title"] = "Privacy Policy";
}
@model GetByIdUserResponseVM
@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@TempData["message"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<div class="row">
    <div class="col-lg-12 col-xl-12 ">
        <div class="login-sec">
            <div class=" text-center card mb-0">
                @if (Model == null)
                {
                    <form asp-area="" asp-controller="Home" asp-action="UpdateFromUser" class="card-body" tabindex="500" method="post">
                        <label class="header-brand">GET USER</label>
                        <div class="">
                            <div class="form-group">
                                <input type="text" class="form-control" id="id" name="id" placeholder="Enter Id">
                            </div>
                        </div>
                        <div class="submit mt-3 mb-3">
                            <button type="submit" class="btn btn-primary btn-block">Get User</button>
                        </div>
                    </form>
                }
                else
                {
                    <form asp-area="" asp-controller="Home" asp-action="UserUpdate" class="card-body" tabindex="500" method="post">
                        <label class="header-brand">GET USER</label>
                        <div class="">
                            <div class="form-group">
                                <input type="text" asp-for="Data.Id" class="form-control" id="id" name="id" value="@Model.Data.Id" readonly>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Data.FirstName" class="form-control" id="firstName" name="firstName" value="@Model.Data.FirstName">
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Data.LastName" class="form-control" id="lastName" name="lastName" value="@Model.Data.LastName">
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Data.Email" class="form-control" id="email" name="email" value="@Model.Data.Email">
                            </div>
                        </div>
                        <div class="submit mt-3 mb-3">
                            <button type="submit" class="btn btn-primary btn-block">Update User</button>
                        </div>

                        @Html.HiddenFor(x => x.Data.Id);
                        @Html.HiddenFor(x => x.Data.FirstName);
                        @Html.HiddenFor(x => x.Data.LastName);
                        @Html.HiddenFor(x => x.Data.Email);
                    </form>
                }
            </div>
        </div>
    </div>
</div>